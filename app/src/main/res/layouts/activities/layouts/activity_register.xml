<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:background="@drawable/gradient_bg_dark">

    <ImageView
        android:onClick="finishView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inscrivez vous maintenant"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#99FFFFFF"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:layout_marginBottom="70dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/register_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom complet"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:textColor="#FFF"
            android:textColorHint="#33FFFFFF"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/register_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse mail"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:textColor="#FFF"
            android:textColorHint="#33FFFFFF"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/register_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:textColor="#FFF"
            android:textColorHint="#33FFFFFF"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="S'inscrire"
            android:textSize="16sp"/>

        <TextView
            android:onClick="finishView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vous avez déjà un compte ? connectez vous"
            android:textColor="#AAFFFFFF"
            android:layout_marginTop="30dp"
            android:layout_margin="30dp"
            android:padding="10dp"/>

    </LinearLayout>

</RelativeLayout>