<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AuthorActivities.CorrectArticleActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bgPrimary"
        android:padding="20dp"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="center_vertical"
            android:onClick="backArrowClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_correct_article"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/correct_article_id_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre d'article"
                    android:textSize="17sp"
                    android:textColor="@color/bgPrimary"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/correct_article_title_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Titre"
                    android:textSize="15sp"
                    android:background="@drawable/custom_edit_text"
                    android:padding="10dp"
                    android:textColor="#AA111144"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domaine de l'article"
                    android:textSize="17sp"
                    android:textColor="@color/bgPrimary"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/correct_article_domain_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Domaine"
                    android:textSize="15sp"
                    android:background="@drawable/custom_edit_text"
                    android:padding="10dp"
                    android:textColor="#AA111144"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contenu de l'article"
                    android:textSize="17sp"
                    android:textColor="@color/bgPrimary"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/correct_article_content_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contenu"
                    android:textSize="15sp"
                    android:lines="10"
                    android:minLines="10"
                    android:maxLines="10"
                    android:gravity="top|start"
                    android:background="@drawable/custom_edit_text"
                    android:padding="10dp"
                    android:textColor="#AA111144"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">

                <ImageView
                    android:id="@+id/btn_correct_article_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_accept"
                    android:layout_weight="3"
                    android:onClick="correctArticleClick"
                    android:background="@drawable/round_boutton_orange"
                    android:padding="15dp"
                    android:layout_margin="5dp"
                    android:foreground="?attr/selectableItemBackground"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_restore"
                    android:onClick="chargeArticle"
                    android:background="@drawable/round_boutton_gray"
                    android:padding="15dp"
                    android:layout_margin="5dp"
                    android:foreground="?attr/selectableItemBackground"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>