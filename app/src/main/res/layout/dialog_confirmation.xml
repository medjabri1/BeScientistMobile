<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center_vertical|center_horizontal"
      android:padding="20dp"
      style="?attr/materialAlertDialogTheme"
      android:background="@drawable/gradient_round_bg_dark">

    <TextView
        android:id="@+id/dialog_confirmation_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/dialog_confirmation_content_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog text meessage"
        android:textColor="#77010021"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:lineHeight="25dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

      <Button
          android:id="@+id/dialog_confirmation_close_id"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:text="Annuler"
          android:textColor="#FFF"
          android:backgroundTint="#11FFFFFF"
          style="?materialButtonOutlinedStyle"
          android:layout_margin="5dp"/>

      <Button
          android:id="@+id/dialog_confirmation_confirm_id"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:text="Continuer"
          android:textColor="#FFF"
          android:backgroundTint="#77010021"
          style="?materialButtonOutlinedStyle"
          android:layout_margin="5dp"/>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>